<div class="flat-card mb-4">
  <div class="flat-card-img">
  </div>
  <div class="flat-card-content p-3 position-relative">
    <h4><%= flat.name %></h4>
    <p><%= flat.address %></p>
    <div class="d-flex position-absolute" style="bottom: 16px;">
      <div class="d-flex me-3">
        <p class="m-0"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
      </div>
      <div class="d-flex">
        <p class="m-0"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
      </div>
    </div>
  </div>
  <div class="flat-card-action p-3 border-top">
    <%= link_to "More info", flat_path(flat), class: "text-decoration-none" %>
  </div>
</div>
