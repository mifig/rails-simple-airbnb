<div class="banner" style="background-image: url('<%= @flat.flat_img %>')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card height-extra">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5><strong>Book this place!</strong></h5>
        <form action="#">
          <div class="form-group row mt-2">
            <label class="col-sm-2 col-form-label col-form-label-sm">From:</label>
            <div class="col-sm-10">
              <input type="date" class="form-control form-control-sm" id="colFormLabelSm" placeholder="21/01/2022">
            </div>
          </div>
          <div class="form-group row mt-2">
            <label class="col-sm-2 col-form-label col-form-label-sm">To:</label>
            <div class="col-sm-10">
              <input type="date" class="form-control form-control-sm" id="colFormLabelSm" placeholder="31/01/2022">
            </div>
          </div>
          <div class="form-group row">
            <button class="btn btn-success mt-2 center-btn">Book</button>
          </div>
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex">
          <div class="d-flex me-3">
            <p class="m-0"><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
          </div>
          <div class="d-flex">
            <p class="m-0"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <p class="m-0" style="font-size: 18px">Share: <i class="fab fa-facebook-square"></i> <i class="fab fa-twitter-square"></i> <i class="fab fa-github-square"></i> <i class="fab fa-youtube"></i></p>
      </div>
    </div>
  </div>
</div>
