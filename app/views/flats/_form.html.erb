<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.input :flat_img %>
  <%= f.button :submit, class: "btn btn-primary" %>
  <%= link_to "Cancel", new_flat_path, class: "btn btn-secondary" %>
<% end %>
